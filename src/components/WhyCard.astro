---
interface Props {
  img: string;
  alt: string;
  title: string;
  description: string;
}

const { img, alt, title, description }: Props = Astro.props;
---

<li class="max-w-[420px]">
  <img src={img} alt={alt} />
  <h4 class="font-ClashDisplay text-2xl mt-3">{title}</h4>
  <p class="mt-3 leading-5 text-white/60">{description}</p>
</li>
